# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/real-estate-games

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# JWT Secret for Admin Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (for Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Admin Email for Notifications
ADMIN_EMAIL=admin@realestategames.com

# Server URL for File Uploads
SERVER_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_FILES=10

# Paystack Configuration
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# Optional: MongoDB Atlas (if using cloud database)
# MONGODB_URI=mongodb+srv://[username]:[password]@[cluster].mongodb.net/real-estate-games

# Optional: Production Settings
# NODE_ENV=production
# CLIENT_URL=https://yourdomain.com
# SERVER_URL=https://yourdomain.com 